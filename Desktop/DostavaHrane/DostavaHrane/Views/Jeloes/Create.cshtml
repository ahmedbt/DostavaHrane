@model DostavaHrane.Models.Jelo

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj novo jelo</h1>

<h4>Jelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Restoran" class="control-label"></label>
                <select asp-for="RestoranID" class ="form-control" asp-items="ViewBag.RestoranID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>


